<% provide :title, t("bill") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>BILL</h1>              
        <p><%= t("user")%>: <%= @bill.user_name %></p>
        <p><%= t("room")%>: <%= @bill.room_name %></p>
        <p><%= t("price_room")%>: <%= @bill.room_price %></p>    
        <p><%= t("electrical_number")%>: <%= @bill.electrical_number %></p>
        <p><%= t("price_electrical")%>: <%= get_money_electric @bill %></p>
        <p><%= t("sum")%>: <%= sum_money_bill @bill %></p>
    </section>
  </aside>
</div>
